<odoo>
    <data>
        <record id="view_employee_form_inherit_aadhar" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.aadhar</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="aadhar_no"/>
                </xpath>
            </field>
        </record>

        <record id="view_employee_tree_inherit_aadhar" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit.aadhar</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="aadhar_no"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
